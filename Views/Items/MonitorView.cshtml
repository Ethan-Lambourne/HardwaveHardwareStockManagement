@model Monitor
@{
    ViewData["Title"] = "Monitor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Html.Raw(Model.Name)</h1>
<div>
    <div>
        <table class="table" id="table">
            <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>@Html.DisplayFor(model => model.ID)</td>
                </tr>
                <tr>
                    <th scope="row">Name</th>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <th scope="row">Type</th>
                    <td>@Html.DisplayFor(model => model.Type)</td>
                </tr>
                <tr>
                    <th scope="row">Stock</th>
                    <td>@Html.DisplayFor(model => model.Stock)</td>
                </tr>
                <tr>
                    <th scope="row">Price</th>
                    <td>£@Html.DisplayFor(model => model.Price)</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>@Html.DisplayFor(model => model.Description)</td>
                </tr>
                <tr>
                    <th scope="row">Screen Size</th>
                    <td>@Html.DisplayFor(model => model.ScreenSize) inches</td>
                </tr>
                <tr>
                    <th scope="row">Refresh Rate</th>
                    <td>@Html.DisplayFor(model => model.RefreshRate) Hz</td>
                </tr>
            </tbody>
        </table>
        <div>
            <a class="btn btn-danger" asp-action="DeleteItemView" asp-controller="DeleteItem" asp-route-itemId="@Model.ID">Delete</a>
            <a class="btn btn-warning" asp-action="EditMonitorView" asp-controller="EditItem" asp-route-monitorId="@Model.ID">Edit</a>
        </div>
    </div>
</div>
