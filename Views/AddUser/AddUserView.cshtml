@model HardwaveStockManagement.Models.User
@{
	ViewData["Title"] = "AddUser";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add User</h1>

<p>Add a new user to the database</p>
<hr />
<div class="row">
	<div>
		<form asp-action="AddUser">
			<div class="col-sm-4 m-3">
				<label asp-for="Username" class="control-label"></label>
				<input asp-for="Username" class="form-control" required />
				<span asp-validation-for="Username" class="text-danger"></span>
			</div>
			<div class="col-sm-4 m-3">
				<label asp-for="Password" class="control-label"></label>
				<input asp-for="Password" class="form-control" required />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="col-sm-4 m-3 form-switch">
				<input asp-for="Admin" class="form-check-input" type="checkbox" id="adminSwitch">
				<label asp-for="Admin" class="form-check-label" for="adminSwitch">Admin Account</label>
			</div>
			<div class="col-sm-4 m-3">
				<input type="submit" value="Add User" class="btn btn-success"
					asp-controller="AddUser" asp-action="AddUser"
					asp-route-Username="Username" asp-route-Password="Password" asp-route-Admin="Admin"/>
			</div>
		</form>
	</div>
</div>
